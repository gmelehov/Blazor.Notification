@inherits LayoutComponentBase


<script type="module" src="js/hubPage.js"></script>
<script>

  setTimeout(()=>{
    window.HUBPAGE.hub =
      new signalR.HubConnectionBuilder()
        .withUrl("https://localhost:7118/BNHub", {
          transport: signalR.HttpTransportType.WebSockets,
          skipNegotiations: true
        })
        .withAutomaticReconnect()

        .build();

    window.HUBPAGE.hub.onclose(() => window.HUBPAGE.start());

    window.HUBPAGE.init();
  }, 400);

</script>


