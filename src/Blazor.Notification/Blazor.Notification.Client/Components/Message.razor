@inherits Blazor.Notification.Client.Components.MessageVM
@rendermode InteractiveServer


<li status="@Status">
  <div>
    <p>
      <span class="from" title="Отправитель">@SenderName</span>
      <span class="time" title="Отправлено">@CreatedOn</span>
      <span class="to" title="Получатель">@ReceiverName</span>
      <span class="status material-icons" size="n">
        @IconName
      </span>
    </p>
    <span class="text">@Text</span>
  </div>
</li>



@code {


  /// <summary>
  /// Название иконки, выводимой в правой части компонента.
  /// </summary>
  public string IconName => Status switch
  {
    Models.Enums.MessageStatus.Sent => "check",
    Models.Enums.MessageStatus.Read or Models.Enums.MessageStatus.Read | Models.Enums.MessageStatus.Sent => "done_all",
    _ => ""
  };

}
